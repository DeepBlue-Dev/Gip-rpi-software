<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">Batterij monitor</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="Forklift">
                <span class="oi oi-info" aria-hidden="true"></span> heftruck
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link"  @onclick="()=>collapseSubNav = !collapseSubNav">
                <span class="oi oi-fork" aria-hidden="true"></span> instellingen
            </NavLink>

            @if (!collapseSubNav)
            {
                <div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
                    <ul class="nav flex-column">
                        <li class="nav-item px-3">
                            <NavLink class="nav-link" href="/settings/email">
                                <span class="oi oi-envelope-closed" aria-hidden="true"></span>Emails
                            </NavLink>
                        </li>
                    </ul>
                </div>
            }
        </li>
    </ul>
</div>

@code {
    private bool collapseNavMenu = true;
    private bool collapseSubNav = true;
    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }


}
